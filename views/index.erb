
<form method='post' action='signup'>
  <fieldset class='form-group'>
  <label>Your email address</label>
  <input class="form-control" type='email' required name='email'>
  <small>We'll never share your email with anyone else.</small>
  </fieldset>
  <button class='btn btn-primary' type='submit'>Sign Up</button>
</form>

<iframe src=<%= @data["embed_url"] %> width="300" height="380" frameborder="0" allowtransparency="true"></iframe>

<% @shows.each do |day, shows| %>
  <h2><%= Date.parse(day).strftime("%A, %B %e, %Y") %></h2>
  <% shows.each do |show| %>
    <div class="show">
      <a href='<%= show['uri'] %>'>
      <p><%= show["performance"][0]["artist"]["displayName"] %> - 
      <%= show["start"]["time"] %> @
      <%= show["venue"]["displayName"] %>
      </a>
    </div>
  <% end %>
<% end %>
